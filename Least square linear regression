T=[0 1; 1 3; 2 4; 3 4]; %each row: x, y

%Linear regression
[n,m]=size(T);   %n=total data   m=data dim
X=zeros(n,m)
for j=1:n
     X(j,:)=T(j,1:m-1);
     X(j,m)=1;
end
y0=T(:,m);
res=inv(X.'*X)*X.'*y0 %b, w(1), ...

%plot
x = linspace(0, 4);		% 在 0 到 2*pi 間，等分取 100 個點  
y = res(1)+res(2)*x;

plot(x,y,T(:,1),T(:,2),'rX');			% 進行二維平面描點作圖
grid on;
